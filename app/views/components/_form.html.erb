<%= form_for @component do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label "Company" %> <br />
  <%= f.text_field :company %><br />
  <%= f.label "Product Name" %> <br />
  <%= f.text_field :name %><br />
  <%= f.label "Price" %> <br />
  <%= f.text_field :price %><br />
  <%= f.label "Condition" %> <br />
  <%= f.text_field :condition %><br />
  <%= f.label "Description" %> <br />
  <%= f.text_area :description %><br /><br>
  <%= f.submit "Submit Listing", :class => "btn btn-success" %><br />
<% end %>